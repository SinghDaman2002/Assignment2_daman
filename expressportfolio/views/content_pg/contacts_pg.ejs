<%- include ../partials/header.ejs%>
    <%- include ../partials/main_nav.ejs%>

        <main>
            <h1 class="text-center">Business Contacts</h1>
            <div class="container">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Contact Number</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < contacts.length; i++) { %>
                            <tr>
                                <th>
                                    <%= i+1 %>
                                </th>
                                <th>
                                    <%= contacts[i].name  %>
                                </th>
                                <th>
                                    <%= contacts[i].number  %>
                                </th>
                                <th>
                                    <%= contacts[i].email  %>
                                </th>
                                <th>
                                    <a href="/secure/contact/edit/<%= contacts[i]._id %>" class="btn btn-primary">Edit</a>
                                    <a href="/secure/contact/delete/<%= contacts[i]._id %>" class="btn btn-danger">Delete</a>
                                </th>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </main>
        <%- include ../partials/bottom_nav.ejs%>
            <%- include ../partials/footer.ejs%>