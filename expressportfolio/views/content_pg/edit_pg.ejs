<%- include ../partials/header.ejs%>
    <%- include ../partials/main_nav.ejs%>
   
        <main id="contactus">
            <div id="contact-info">
                <h3 class="display-5 text-center">Edit Business Contact</h3>
                <% if(typeof message!='undefined' ) { %>
                    <div class="alert alert-success" role="alert">
                        <%= message %>
                    </div>
                <% } %>
                <div class="container-fluid">
                    <form action="/secure/contact/edit" class="form" method="post">
                        <input type="text" class="form-control" id="id" name="id" value="<%= contact._id  %>" hidden>
                        <div class="form-group mt-3">
                            <label for=""> Enter Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="<%= contact.name  %>">
                        </div>
                        <div class="form-group mt-3">
                            <label for=""> Enter Contact Number</label>
                            <input type="text" class="form-control" id="number" name="number" placeholder="Enter Contact Number" value="<%= contact.number  %>">
                        </div>
                        <div class="form-group mt-3">
                            <label for=""> Enter Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" value="<%= contact.email  %>">
                        </div>
                        <input type="submit" value="Update Contact" class="btn btn-success btn-lg w-100 mt-3">
                        <a href="/secure/contact/delete/<%= contact._id %>" class="btn btn-danger btn-lg w-100 mt-3">Delete</a>
                        <a href="/secure/" class="btn btn-secondary btn-lg w-100 mt-3">Cancel</a>
                    </form>
                </div>

            </div>
        </main>
        <%- include ../partials/bottom_nav.ejs%>
        <%- include ../partials/footer.ejs%>